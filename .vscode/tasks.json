{
    // ===========================================
    // ARQUIVO: tasks.json
    // Configurações de build, run e clean
    // Integração direta com o Makefile multiplataforma
    // ===========================================

    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "problemMatcher": []
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "make",
            "args": [
                "debug"
            ],
            "problemMatcher": []
        }
    ]
}
